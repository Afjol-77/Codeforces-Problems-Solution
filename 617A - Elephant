#include <iostream>

using namespace std;

int main(){
    
    int x,i, n=0;
    cin >> x;
    
    for(i=0; ;i++){
        if (x>=5){
             n += 1;
             x -= 5;
        }
        
        else if (x>=4){
            n +=1;
            x -= 4;
        }
        
        else if (x>=3){
            n +=1;
            x -= 3;
        }
        
        else if (x>=2){
            n +=1;
            x -= 2;
        }
        
        else if (x>=1){
            n +=1;
            x -= 1;
        }
           
        else
            break;
    }
    
    cout << n << endl;
    return 0;
}
