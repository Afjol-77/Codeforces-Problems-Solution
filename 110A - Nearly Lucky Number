#include <iostream>
#include <string>

using namespace std;

int main(){
    
    long long n;
    int count=0;
    cin >> n;
    
    string s = to_string(n);
    
    for(int i=0;i<s.size();i++){
        if (s[i] == '7' || s[i] == '4')
        {
            count++;
        }
    } 
    
    if(count == 7 || count == 4){
        cout <<"YES";
    }
    else
        cout <<"NO";
            
    return 0;
}
